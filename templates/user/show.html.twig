{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
<div class="col-md-10 contenu-blanc">
	<h1>User</h1>
	<div class="contenu">
    <table class="table table-striped table-advance table-hover">
		<thead>
			<tr class="bg-entete">
				<th class="col-md-1">Identifiant</th>
				<th class="col-md-2">Email</th>
				<th class="col-md-1">Rôle</th>
				<th class="col-md-1">Password</th>
				<th class="col-md-1">Nom</th>
				<th class="col-md-1">Prénom</th>
				<th class="col-md-1">Téléphone</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>{{ user.id }}</td>
				<td>{{ user.email }}</td>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				<td>{{ user.password }}</td>
				<td>{{ user.nom }}</td>
				<td>{{ user.prenom }}</td>
				<td>{{ user.telephone }}</td>
				<td class="col-md-2">
					<button class="btn btn-info btn-sm" type="button" title="Retour" onclick="window.location.href='{{ path('app_user_index') }}'">
						<i class="fa fa-undo"></i>
						Retour</button>
					<button class="btn btn-warning btn-sm" type="button" title="Retour" onclick="window.location.href='{{ path('app_user_edit', {'id': user.id}) }}'">
						<i class="fa fa-pencil"></i>
						Editer</button>
                    {{ include('user/_delete_form.html.twig') }}
                </td>
			</tr>
		</tbody>
	</table>
	</div>
</div>
{% endblock %}
