{{ form_start(form) }}
<div class="contenu">
	<table class="table table-striped table-advance table-hover">
		<thead>
			<tr class="bg-entete">
				<th class="col-md-1">Identifiant</th>
				<th class="col-md-2">Email</th>
				<th class="col-md-1">Rôle</th>
				<th class="col-md-1">Password</th>
				<th class="col-md-1">Nom</th>
				<th class="col-md-1">Prénom</th>
				<th class="col-md-1">Téléphone</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			<td>{{ user.id }}</td>
			<td>{{ form_widget(form.email, {'attr': {'class': 'col-md-12'}}) }}
				{{ form_errors(form.email) }}</td>
			<td>
				{% for role in form.roles %}
					<label style="display: flex; align-items: center; gap: 5px;">
						{{ form_widget(role) }}
						{{ form_label(role, null, {'label_attr': {'style': 'margin: 0;'}}) }}
					</label>
					{{ form_errors(role) }}
				{% endfor %}
			</td>
			<td>{{ form_widget(form.password, {'attr': {'class': 'col-md-12'}}) }}
				{{ form_errors(form.password) }}</td>
			<td>{{ form_widget(form.nom, {'attr': {'class': 'col-md-12'}}) }}
				{{ form_errors(form.nom) }}</td>
			<td>{{ form_widget(form.prenom, {'attr': {'class': 'col-md-12'}}) }}
				{{ form_errors(form.prenom) }}</td>
			<td>{{ form_widget(form.telephone, {'attr': {'class': 'col-md-12'}}) }}
				{{ form_errors(form.telephone) }}</td>
			<td class="col-md-2">
				<button class="btn btn-primary btn-sm" type="submit" formaction="{{ path('app_user_edit', {'id' : user.id }) }}" title="Enregistrer">
					<i class="fa fa-save"></i>
					Enregistrer</button>
				<button class="btn btn-info btn-sm" type="reset" title="Effacer la saisie">
					<i class="fa fa-eraser"></i>
					Effacer</button>
				<button class="btn btn-warning btn-sm" type="button" title="Annuler" onclick="window.location.href='{{ path('app_user_show', {'id' : user.id}) }}'">
					<i class="fa fa-undo"></i>
					Annuler</button>
			</td>
		</tbody>
	</table>
</div>
{{ form_end(form) }}
