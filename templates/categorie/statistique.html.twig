{% extends 'base.html.twig' %}

{% block title %}Catégories
{% endblock %}

{% block body %}
	<div class="col-md-7 contenu-blanc">

		<h1>
			{% if tbCategorieDesc | length == 0 %}
				Il n'y a pas de catégorie
			{% elseif tbCategorieDesc | length == 1%}
				La catégorie
			{% else %}
				Les
				<span>
					{{  tbCategorieDesc | length }}
				</span>
				catégories
			{% endif %}
		</h1>
		{{ include('messages.html.twig') }}
		<div class="contenu">
			<table class="table table-striped table-advance table-hover">
				<thead>
					<tr class="bg-entete">
						<th>Nom</th>
						<th>Nombre de produits</th>
						<th>Prix minimum</th>
						<th>Prix maximum</th>
						<th>Prix moyen</th>
					</tr>
				</thead>
				<tbody>
					{% for key, categorie in tbCategorieDesc %}
						<tr>

							<td>{{ categorie.name }}</td>
							<td>{{ categorie.nbProduits }}</td>
                            <td>{{ categorie.prixMin }}</td>
                            <td>{{ categorie.prixMax }}</td>
                            <td>{{ categorie.prixMoyen }}</td>
						</tr>
					{% endfor %}

				</tbody>
			</table>
		</div>
		<!--fin div contenu-->
	</div>
	<!--fin div col-md-6-->
{% endblock %}
