<div
    class="container-fluid contenu">

    {# -- formulaire produit -- #}
    {{ form_start(form) }}

    <div class="row">
        <div class="col-md-4">{{ form_row(form.libelle) }}</div>
        <div class="col-md-4">{{ form_row(form.categorie) }}</div>
        <div class="col-md-4">{{ form_row(form.imageFichier) }}</div>
    </div>

    <div class="row">
        <div class="col-md-3">{{ form_row(form.prix) }}</div>
        <div class="col-md-9">{{ form_row(form.description) }}</div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="col-md-4 col-form-label">{{ form_row(form.cru) }}</div>
            <div class="col-md-4 col-form-label">{{ form_row(form.cuit) }}</div>
            <div class="col-md-4 col-form-label">{{ form_row(form.bio) }}</div>
        </div>
        <div class="col-md-3">
            <div>{{ form_row(form.debutDisponibilite) }}</div>
            <div>{{ form_row(form.finDisponibilite) }}</div>
        </div>
    </div>

    <div class="row">
        <div>{{ form_rest(form) }}</div>
    </div>

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-2">
            <button class="btn btn-primary btn-xs">
                <i class="fa fa-save"></i>
                {{ button|default('Enregistrer') }}</button>
        </div>
        <div class="col-md-2">
            <button class="btn btn-info btn-xs" type="reset" title="Effacer la saisie">
                <i class="fa fa-eraser">
                    Annuler</i>
            </button>
        </div>
        <div class="col-md-2">
            <a href="{{ path('app_produit')}}" class="btn btn-secondary btn-xs">
                <i class="fa fa-undo"></i>
                Retour liste</a>
        </span>
    </div>
    {{ form_end(form) }}
</div>
