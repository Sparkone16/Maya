{% extends 'base.html.twig' %}

{% block title %}Saisonniers
{% endblock %}

{% block body %}
	<div class="col-md-11 contenu-blanc">

		<h1>
            {% if lesSaisonniers | length == 0 %}
                Il n'y a pas de saisonnier
            {% elseif lesSaisonniers | length == 1%}
                Le saisonnier
            {% else %}
                Les
                <span>
                    {{  lesSaisonniers | length }}
                </span>
                saisonniers
            {% endif %}
        </h1>
		{{ include('messages.html.twig') }}
		<div class="contenu">
			<table class="table table-striped table-advance table-hover">
				<thead>
					<tr class="bg-entete">
						<th>Identifiant</th>
						<th>Nom</th>
						<th>Prénom</th>
						<th>Téléphone</th>
						<th>Mail</th>
                        <th>Adresse</th>
						<th>Date de naissance</th>
						<th>Date de début</th>
						<th>Salaire horaire</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					<!-- formulaire pour ajouter un nouvel saisonnier-->
					<tr>
						{{ form_start(formCreation) }}
						<td class="col-md-1">Nouveau</td>
						<td class="col-md-1">{{ form_widget(formCreation.nom) }}
							{{ form_errors(formCreation.nom) }}</td>
						<td class="col-md-1">{{ form_widget(formCreation.prenom) }}
							{{ form_errors(formCreation.prenom) }}</td>
						<td class="col-md-1">{{ form_widget(formCreation.telephone) }}
							{{ form_errors(formCreation.telephone) }}</td>
						<td class="col-md-1">{{ form_widget(formCreation.mail, {'attr': {'class': 'col-md-12'}}) }}
							{{ form_errors(formCreation.mail) }}</td>
                        <td class="col-md-1">{{ form_widget(formCreation.adresse) }}
							{{ form_errors(formCreation.adresse) }}</td>
						<td class="col-md-1">{{ form_widget(formCreation.dateNaissance, {'attr': {'class': 'col-md-12 text-center'}}) }}
							{{ form_errors(formCreation.dateNaissance) }}</td>
						<td class="col-md-1">{{ form_widget(formCreation.dateDebut, {'attr': {'class': 'col-md-12 text-center'}}) }}
							{{ form_errors(formCreation.dateDebut) }}</td>
                        <td class="col-md-1">{{ form_widget(formCreation.salaireHoraire) }}
							{{ form_errors(formCreation.salaireHoraire) }}</td>
						<td class="col-md-2">
							<button class="btn btn-primary btn-sm" type="submit" formaction="{{ path('app_saisonnier_ajouter') }}" title="Enregistrer nouveau saisonnier">
								<i class="fa fa-save"></i>
								Enregistrer</button>
							<button class="btn btn-info btn-sm" type="reset" title="Effacer la saisie">
								<i class="fa fa-eraser"></i>
								Annuler
							</button>
						</td>
						{# Ceci va générer le champ CSRF #}
						{{ form_rest(formCreation) }}
						{{ form_end(formCreation) }}
					</tr>
					{% for key, saisonnier in lesSaisonniers %}
						<tr>
							{% if saisonnier.id != idSaisonnierModif %}

								<td>{{ saisonnier.id }}</td>
								<td>{{ saisonnier.nom }}</td>
								<td>{{ saisonnier.prenom }}</td>
								<td>{{ saisonnier.telephone }}</td>
								<td>{{ saisonnier.mail }}</td>
                                <td>{{ saisonnier.adresse }}</td>
                                <td>{{ saisonnier.dateNaissance|date('d/m/Y') }}</td>
                                <td>{{ saisonnier.dateDebut|date('d/m/Y') }}</td>
                                <td>{{ saisonnier.salaireHoraire }}</td>
								<!-- formulaire pour demander la modification ou la suppression -->
								<td>
									<form>
										<button type="submit" class="btn btn-primary btn-sm" formaction="{{ path('app_saisonnier_demandermodification', {'id' : saisonnier.id }) }}" title="Modifier">
											<i class="fa fa-pencil"></i>
											Modifier</button>
										<button class="btn btn-danger btn-sm" type="submit" formaction="{{ path('app_saisonnier_supprimer', {'id' : saisonnier.id }) }}" title="Supprimer" onclick="return confirm('Voulez-vous vraiment supprimer cette saisonnier ?');">
											<i class="fa fa-trash-o "></i>
											Supprimer</button>
										<input type="hidden" name="_token" value="{{ csrf_token('action-item' ~ saisonnier.id) }}">
									</form>
								</td>

							{% else %}

								<!-- formulaire pour modifier un saisonnier -->
								{{ form_start(formModification) }}
								<td>{{ saisonnier.id }}</td>
								<td>{{ form_widget(formModification.nom) }}
									{{ form_errors(formModification.nom) }}</td>
								<td>{{ form_widget(formModification.prenom) }}
									{{ form_errors(formModification.prenom) }}</td>
								<td>{{ form_widget(formModification.telephone) }}
									{{ form_errors(formModification.telephone) }}</td>
								<td>{{ form_widget(formModification.mail, {'attr': {'class': 'col-md-12'}}) }}
									{{ form_errors(formModification.mail) }}</td>
                                <td>{{ form_widget(formModification.adresse) }}
									{{ form_errors(formModification.adresse) }}</td>
                                <td>{{ form_widget(formModification.dateNaissance, {'attr': {'class': 'col-md-12 text-center'}}) }}
									{{ form_errors(formModification.dateNaissance) }}</td>
                                <td>{{ form_widget(formModification.dateDebut, {'attr': {'class': 'col-md-12 text-center'}}) }}
									{{ form_errors(formModification.dateDebut) }}</td>
                                <td>{{ form_widget(formModification.salaireHoraire) }}
									{{ form_errors(formModification.salaireHoraire) }}</td>
								<td class="col-md-4">
									<button class="btn btn-primary btn-sm" type="submit" formaction="{{ path('app_saisonnier_modifier', {'id' : saisonnier.id }) }}" title="Enregistrer">
										<i class="fa fa-save"></i>
										Enregistrer</button>
									<button class="btn btn-info btn-sm" type="reset" title="Effacer la saisie">
										<i class="fa fa-eraser"></i>
										Effacer</button>
									<button class="btn btn-warning btn-sm" type="button" title="Annuler">
										<a href="{{ path('app_saisonnier') }}">
											<i class="fa fa-undo"></i>
											Annuler
										</a>
									</button>
								</td>
								{# Ceci va générer le champ CSRF #}
								{{ form_rest(formModification) }}
								{{ form_end(formModification) }}
							{% endif %}

						</tr>
					{% endfor %}

				</tbody>
			</table>
		</div>
		<!--fin div contenu-->
	</div>
	<!--fin div col-md-6-->
{% endblock %}